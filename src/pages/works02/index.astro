import "../../styles/sass/styles.scss"
import "./scss/style.scss"
---

<!doctype html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Works02</title>
	</head>
	<body>
    <header class="header">
      <div class="header__logo">
        <h1>Works02</h1>
      </div>
    </header>
    <main>
      <section class="fv">
        <div class="fv__content">
          <h1 class="fv__title">
            <div class="fv__title-block">
              <span class="fv__title">Pioneering</span>
              <img src="/images/hover/image1.jpg" alt="Hover Animation Image">
            </div>
            <div class="fv__title-block">
              <span class="fv__title">Space</span>
              <img src="/images/hover/image2.jpg" alt="Hover Animation Image">
            </div>
            <div class="fv__title-block">
              <span class="fv__title">Exploration</span>
              <img src="/images/hover/image3.jpg" alt="Hover Animation Image">
            </div>
          </h1>
        </div>
      </section>
      <section class="mission">
        <div class="section__title">
          <h2>Mission</h2>
        </div>
        <div class="slider">
          <div class="slider__inner">
            <ul class="slider__list">
              <li class="slider__item">
                <div class="slider__item-block">
                  <img src="/images/hover/image1.jpg" alt="">
                </div>
              </li>
              <li class="slider__item">
                <div class="slider__item-block">
                  <img src="/images/hover/image1.jpg" alt="">
                </div>
              </li>
              <li class="slider__item">
                <div class="slider__item-block">
                  <img src="/images/hover/image1.jpg" alt="">
                </div>
              </li>
              <li class="slider__item">
                <div class="slider__item-block">
                  <img src="/images/hover/image1.jpg" alt="">
                </div>
              </li>
            </ul>
            <div class="slider__prev"></div>
            <div class="slider__next"></div>
          </div>
          <div class="slider__time"></div>
        </div>
        <div class="mission__button button">
          <button>Read More</button>
        </div>
      </section>

    </main>
    <footer></footer>
  </body>
</html>